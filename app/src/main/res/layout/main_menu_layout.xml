<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMain"
    android:layout_width="wrap_content"
    android:layout_height="180dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMain"
        android:layout_width="320px"
        android:layout_height="440px"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgMMRef"
                android:layout_width="320px"
                android:layout_height="320px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/rplaceholder" />

            <TextView
                android:id="@+id/tvMMLT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:maxLines="2"
                android:minLines="1"
                android:paddingTop="0dp"
                android:paddingEnd="4dp"
                android:paddingRight="0dp"
                android:paddingBottom="4dp"
                android:text="Paella"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgMMRef" />

            <TextView
                android:id="@+id/tvReview"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedtextview"
                android:text="3.1"
                android:textAlignment="textStart"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgMMRef"
                app:layout_constraintEnd_toEndOf="@+id/imgMMRef"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8" />

            <ImageView
                android:id="@+id/imgStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvReview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvReview"
                app:srcCompat="@drawable/ic_star_black_8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>