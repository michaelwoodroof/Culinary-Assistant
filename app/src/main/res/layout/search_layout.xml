<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imgHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#000000"
        android:foregroundTint="#000000"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_search_title"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/tv_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Toad in the Hole"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imgHandle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shares 3 of 4"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_search_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_title" />
</androidx.constraintlayout.widget.ConstraintLayout>