<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michaelwoodroof.culinaryassistant">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MealPlanner" />
        <activity android:name=".LocalRecipes" />
        <activity android:name=".overviews.RecipeDetail" />
        <activity android:name=".overviews.RecipeOverview" />
        <activity android:name=".overviews.CategoryOverview" />
        <activity android:name=".login.AccountSignUp" />
        <activity android:name=".login.AccountInfo" />
        <activity android:name=".login.Login" />
        <activity android:name=".overviews.Categories" />
        <activity android:name=".createRecipe.CreateRecipeS5" />
        <activity android:name=".createRecipe.CreateRecipeS4" />
        <activity android:name=".createRecipe.CreateRecipeS3" />
        <activity android:name=".createRecipe.CreateRecipeS2" />
        <activity android:name=".createRecipe.CreateRecipeS1" />
        <receiver android:name=".helper.NotificationReceiver" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>