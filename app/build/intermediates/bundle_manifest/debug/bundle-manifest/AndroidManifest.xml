<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michaelwoodroof.culinaryassistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.michaelwoodroof.culinaryassistant.SearchActivity" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.ShoppingList" />
        <!-- <activity android:name=".DebugMenu" /> -->
        <activity android:name="com.michaelwoodroof.culinaryassistant.mealPlanner.MealPlanner" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.LocalRecipes" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.overviews.RecipeDetail" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.overviews.RecipeOverview" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.login.AccountSignUp" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.login.AccountInfo" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.login.Login" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.overviews.Categories" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.createRecipe.CreateRecipeS5" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.createRecipe.CreateRecipeS4" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.createRecipe.CreateRecipeS3" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.createRecipe.CreateRecipeS2" />
        <activity android:name="com.michaelwoodroof.culinaryassistant.createRecipe.CreateRecipeS1" />

        <receiver android:name="com.michaelwoodroof.culinaryassistant.helper.NotificationReceiver" />

        <activity android:name="com.michaelwoodroof.culinaryassistant.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <!-- MongoDbMobileProvider initialize MongoDB Mobile for future usage -->
        <provider
            android:name="com.mongodb.stitch.android.services.mongodb.local.internal.MongoDbMobileProvider"
            android:authorities="com.michaelwoodroof.culinaryassistant.StitchMongoDBMobileProvider"
            android:exported="false" />
        <!--
          StitchInitProvider is a ContentProvider that will associate the application's Context
          with Stitch. It also will look for resource values such as stitch_client_app_id to register
           a default app client.
        -->
        <provider
            android:name="com.mongodb.stitch.android.core.internal.StitchInitProvider"
            android:authorities="com.michaelwoodroof.culinaryassistant.StitchInitProvider"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.michaelwoodroof.culinaryassistant.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>